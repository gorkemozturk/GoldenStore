@model IEnumerable<GoldenStore.Models.Coupon>
@{
    ViewData["Title"] = "Coupons";
}

<!-- NAVIGATION -->
<nav id="navigation">
    <!-- container -->
    <div class="container">
        <!-- responsive-nav -->
        <div id="responsive-nav">
            <!-- NAV -->
            <partial name="_ManagementMenuPartial" />
            <!-- /NAV -->
        </div>
        <!-- /responsive-nav -->
    </div>
    <!-- /container -->
</nav>
<!-- /NAVIGATION -->
<!-- BREADCRUMB -->
<div id="breadcrumb" class="section">
    <!-- container -->
    <div class="container">
        <!-- row -->
        <div class="row">
            <div class="col-md-12">
                <h3 class="breadcrumb-header">Coupons</h3>
                <ul class="breadcrumb-tree">
                    <li><a href="#">Home</a></li>
                    <li class="active"><a asp-action="Index">Coupons</a></li>
                </ul>
            </div>
        </div>
        <!-- /row -->
    </div>
    <!-- /container -->
</div>
<!-- /BREADCRUMB -->
<!-- SECTION -->
<div class="section">
    <!-- container -->
    <div class="container">
        <!-- row -->
        <div class="row">
            <div class="col-md-12">
                <a asp-action="Create" class="primary-btn pull-right"><i class="fa fa-plus-circle"></i> Create a New Coupon</a>

                <div class="clearfix"></div> <br />
                @if (Model.Count() > 0)
                {
                    <table style="margin: 0" class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th class="text-center">@Html.DisplayNameFor(m => m.Id)</th>
                                <th>@Html.DisplayNameFor(m => m.Name)</th>
                                <th class="text-center">@Html.DisplayNameFor(m => m.Discount)</th>
                                <th>@Html.DisplayNameFor(m => m.MinimumAmount)</th>
                                <th class="text-center">@Html.DisplayNameFor(m => m.IsActive)</th>
                                <th>@Html.DisplayNameFor(m => m.CreatedAt)</th>
                                <th>@Html.DisplayNameFor(m => m.UpdatedAt)</th>
                                <th class="text-center">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="text-center" style="vertical-align: middle">@Html.DisplayFor(m => item.Id)</td>
                                    <td style="vertical-align: middle">@Html.DisplayFor(m => item.Name)</td>
                                    <td class="text-center" style="vertical-align: middle">@Html.DisplayFor(m => item.Discount)</td>
                                    <td style="vertical-align: middle">@Html.DisplayFor(m => item.MinimumAmount)</td>
                                    <td class="text-center" style="vertical-align: middle">@Html.DisplayFor(m => item.IsActive)</td>
                                    <td style="vertical-align: middle">@Html.DisplayFor(m => item.CreatedAt)</td>
                                    <td style="vertical-align: middle">@Html.DisplayFor(m => item.UpdatedAt)</td>
                                    <td class="text-center">
                                        <div class="btn-group btn-group" role="group">
                                            <a class="btn btn-default" asp-action="Update" asp-route-id="@item.Id">
                                                <span class="fa fa-edit"></span>
                                            </a>
                                            <a class="btn btn-default" asp-action="Delete" asp-route-id="@item.Id">
                                                <span class="fa fa-trash-o"></span>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <div style="margin: 0" class="alert alert-info" role="alert">
                        There is no any value to show here.
                    </div>
                }

            </div>
        </div>
        <!-- /row -->
    </div>
    <!-- /container -->
</div>
<!-- /SECTION -->
