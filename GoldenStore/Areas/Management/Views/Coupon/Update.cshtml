@model GoldenStore.Models.Coupon
@{
    ViewData["Title"] = "Update the Coupon";
}

<!-- NAVIGATION -->
<nav id="navigation">
    <!-- container -->
    <div class="container">
        <!-- responsive-nav -->
        <div id="responsive-nav">
            <!-- NAV -->
            <partial name="_ManagementMenuPartial" />
            <!-- /NAV -->
        </div>
        <!-- /responsive-nav -->
    </div>
    <!-- /container -->
</nav>
<!-- /NAVIGATION -->
<!-- BREADCRUMB -->
<div id="breadcrumb" class="section">
    <!-- container -->
    <div class="container">
        <!-- row -->
        <div class="row">
            <div class="col-md-12">
                <h3 class="breadcrumb-header">Coupons</h3>
                <ul class="breadcrumb-tree">
                    <li><a href="#">Home</a></li>
                    <li class="active"><a asp-action="Index">Coupons</a></li>
                </ul>
            </div>
        </div>
        <!-- /row -->
    </div>
    <!-- /container -->
</div>
<!-- /BREADCRUMB -->
<!-- SECTION -->
<div class="section">
    <!-- container -->
    <div class="container">
        <!-- row -->
        <div class="row">
            <div class="col-md-6">
                <div class="order-details">
                    <form method="post" asp-action="Update">
                        <div class="section-title">
                            <h3 class="title">Update the Coupon</h3>
                        </div>
                        <div class="form-group">
                            <label class="control-label" asp-for="Name"></label>
                            <input class="input" type="text" asp-for="Name" autocomplete="off">
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label class="control-label" asp-for="CouponType"></label> <br />
                            <select asp-for="CouponType" asp-items="Html.GetEnumSelectList<Coupon.ECouponType>()" class="input-select">
                                <option value="">Please Select</option>
                            </select> <br />
                            <span asp-validation-for="CouponType" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label class="control-label" asp-for="Discount"></label>
                            <input class="input" type="text" asp-for="Discount" autocomplete="off">
                            <span asp-validation-for="Discount" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label class="control-label" asp-for="MinimumAmount"></label>
                            <input class="input" type="text" asp-for="MinimumAmount" autocomplete="off">
                            <span asp-validation-for="MinimumAmount" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label class="control-label" asp-for="IsActive"></label> <br />
                            <input type="checkbox" asp-for="IsActive">
                            <span asp-validation-for="IsActive" class="text-danger"></span>
                        </div>
                        <a asp-action="Index" style="background: #8D99AE" class="primary-btn"><i class="fa fa-angle-left"></i> Back to List</a>
                        <button asp-route-id="@Model.Id" type="submit" class="primary-btn"><i class="fa fa-edit"></i> Update</button>
                    </form>
                </div>
            </div>
        </div>
        <!-- /row -->
    </div>
    <!-- /container -->
</div>
<!-- /SECTION -->

@section Scripts
    {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
