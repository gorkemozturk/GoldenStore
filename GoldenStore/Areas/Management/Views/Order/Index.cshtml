@model List<GoldenStore.Models.ViewModels.OrderViewModel>
@{
    ViewData["Title"] = "Orders";
}

<!-- NAVIGATION -->
<nav id="navigation">
    <!-- container -->
    <div class="container">
        <!-- responsive-nav -->
        <div id="responsive-nav">
            <!-- NAV -->
            <partial name="_ManagementMenuPartial" />
            <!-- /NAV -->
        </div>
        <!-- /responsive-nav -->
    </div>
    <!-- /container -->
</nav>
<!-- /NAVIGATION -->
<!-- BREADCRUMB -->
<div id="breadcrumb" class="section">
    <!-- container -->
    <div class="container">
        <!-- row -->
        <div class="row">
            <div class="col-md-12">
                <h3 class="breadcrumb-header">Orders</h3>
                <ul class="breadcrumb-tree">
                    <li><a href="#">Home</a></li>
                    <li class="active"><a asp-action="Index">Orders</a></li>
                </ul>
            </div>
        </div>
        <!-- /row -->
    </div>
    <!-- /container -->
</div>
<!-- /BREADCRUMB -->
<!-- SECTION -->
<div class="section">
    <!-- container -->
    <div class="container">
        <!-- row -->
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="order-details">
                        <div class="section-title">
                            <h3 class="title">Search Order</h3>
                        </div>
                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label>ORDER ID</label>
                                    @Html.Editor("order", new { htmlAttributes = new { @class = "input" } })
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label>E-MAIL</label> 
                                    <div>
                                        @Html.Editor("email", new { htmlAttributes = new { @id = "email", @class = "input" } })
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label>USER</label>
                                    @Html.Editor("username", new { htmlAttributes = new { @class = "input" } })
                                </div>
                            </div>
                            <div class="col-md-12 text-right">
                                <div class="form-group">
                                    <button class="primary-btn" type="submit">
                                        <i class="fa fa-search"></i>
                                        Search
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <br />
        <div style="display: flex; flex-wrap: wrap" class="row">
            @if (Model.Count > 0)
            {
                @foreach (var item in Model)
                {
                    <div class="col-md-6">
                        <partial name="_ManagementOrderPartial" model="item" />
                    </div>
                }
            }
            else
            {
                <div class="col-md-12">
                    <div class="alert alert-info" role="alert">
                        There are no any values to show here.
                    </div>
                </div>

            }
        </div>
        <!-- /row -->
    </div>
    <!-- /container -->
</div>
<!-- /SECTION -->


@section Scripts {
    <script src="~/js/typeahead.js"></script>

    <script>
        $(document).ready(function () {
            var email = new Bloodhound({
                datumTokenizer: Bloodhound.tokenizers.obj.whitespace,
                queryTokenizer: Bloodhound.tokenizers.whitespace,
                remote: {
                    url: '/API/Users?type=email&query=%QUERY',
                    wildcard: '%QUERY'
                }
            });

            $('#email').typeahead({ highlight: true, minLength: 3 }, {
                display: 'email',
                source: email
            });
        });
    </script>
}