@model GoldenStore.Models.ViewModels.ProductViewModel
@using GoldenStore.Extensions
@{
    ViewData["Title"] = "Details the Product";
}

<!-- NAVIGATION -->
<nav id="navigation">
    <!-- container -->
    <div class="container">
        <!-- responsive-nav -->
        <div id="responsive-nav">
            <!-- NAV -->
            <partial name="_ManagementMenuPartial" />
            <!-- /NAV -->
        </div>
        <!-- /responsive-nav -->
    </div>
    <!-- /container -->
</nav>
<!-- /NAVIGATION -->
<!-- BREADCRUMB -->
<div id="breadcrumb" class="section">
    <!-- container -->
    <div class="container">
        <!-- row -->
        <div class="row">
            <div class="col-md-12">
                <h3 class="breadcrumb-header">Products</h3>
                <ul class="breadcrumb-tree">
                    <li><a href="#">Home</a></li>
                    <li class="active"><a asp-action="Index">Products</a></li>
                </ul>
            </div>
        </div>
        <!-- /row -->
    </div>
    <!-- /container -->
</div>
<!-- /BREADCRUMB -->
<!-- SECTION -->
<div class="section">
    <!-- container -->
    <div class="container">
        <!-- row -->
        <div class="row">
            <div class="col-md-6">
                <div class="order-details">
                    <form method="post" asp-action="Update">
                        <div class="section-title">
                            <h3 class="title">Update the Product</h3>
                        </div>
                        <div class="form-group">
                            <label class="control-label" asp-for="Product.Name"></label>
                            <input class="input" type="text" asp-for="Product.Name" disabled>
                        </div>
                        <div class="form-group">
                            <label class="control-label" asp-for="Product.Price"></label>
                            <input class="input" type="text" asp-for="Product.Price" disabled>
                        </div>
                        <div class="form-group">
                            <label class="control-label" asp-for="Product.Description"></label>
                            <textarea disabled class="input" asp-for="Product.Description"></textarea>
                        </div>
                        <div class="form-group">
                            <label class="control-label" asp-for="Product.CategoryId"></label> <br />
                            <select disabled asp-for="Product.CategoryId" asp-items="Model.Categories.ToSeceltListItem(Model.Product.CategoryId)" class="input-select"></select>
                        </div>
                        <div class="form-group">
                            <label class="control-label" asp-for="Product.IsActive"></label> <br />
                            <input disabled type="checkbox" asp-for="Product.IsActive">
                        </div>
                        <a asp-action="Index" style="background: #8D99AE" class="primary-btn"><i class="fa fa-angle-left"></i> Back to List</a>
                        <a asp-route-id="@Model.Product.Id" asp-action="Update" class="primary-btn"><i class="fa fa-edit"></i> Go to Update</a>
                    </form>
                </div>
            </div>
            <div class="col-md-6">
                <img alt="@Model.Product.Name" class="img-responsive" src="@Model.Product.Image" />
            </div>
        </div>
        <!-- /row -->
    </div>
    <!-- /container -->
</div>
<!-- /SECTION -->