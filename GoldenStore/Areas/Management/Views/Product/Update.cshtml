@model GoldenStore.Models.ViewModels.ProductViewModel
@using GoldenStore.Extensions
@{
    ViewData["Title"] = "Update the Product";
}

<!-- NAVIGATION -->
<nav id="navigation">
    <!-- container -->
    <div class="container">
        <!-- responsive-nav -->
        <div id="responsive-nav">
            <!-- NAV -->
            <partial name="_ManagementMenuPartial" />
            <!-- /NAV -->
        </div>
        <!-- /responsive-nav -->
    </div>
    <!-- /container -->
</nav>
<!-- /NAVIGATION -->
<!-- BREADCRUMB -->
<div id="breadcrumb" class="section">
    <!-- container -->
    <div class="container">
        <!-- row -->
        <div class="row">
            <div class="col-md-12">
                <h3 class="breadcrumb-header">Products</h3>
                <ul class="breadcrumb-tree">
                    <li><a href="#">Home</a></li>
                    <li class="active"><a asp-action="Index">Products</a></li>
                </ul>
            </div>
        </div>
        <!-- /row -->
    </div>
    <!-- /container -->
</div>
<!-- /BREADCRUMB -->
<!-- SECTION -->
<div class="section">
    <!-- container -->
    <div class="container">
        <!-- row -->
        <div class="row">
            <div class="col-md-6">
                <div class="order-details">
                    <form method="post" asp-action="Update" enctype="multipart/form-data">
                        <div class="section-title">
                            <h3 class="title">Update the Product</h3>
                        </div>
                        <div class="form-group">
                            <label class="control-label" asp-for="Product.Name"></label>
                            <input class="input" type="text" asp-for="Product.Name" autocomplete="off">
                            <span asp-validation-for="Product.Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label class="control-label" asp-for="Product.Price"></label>
                            <input class="input" type="text" asp-for="Product.Price" autocomplete="off">
                            <span asp-validation-for="Product.Price" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label class="control-label" asp-for="Product.Description"></label>
                            <textarea class="input" asp-for="Product.Description"></textarea>
                            <span asp-validation-for="Product.Description" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label class="control-label" asp-for="Product.CategoryId"></label> <br />
                            <select asp-for="Product.CategoryId" asp-items="Model.Categories.ToSeceltListItem(Model.Product.CategoryId)" class="input-select">
                                <option value="">Please Select</option>
                            </select> <br />
                            <span asp-validation-for="Product.CategoryId" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label class="control-label" asp-for="Product.Image"></label>
                            <input multiple type="file" asp-for="Product.Image">
                            <span asp-validation-for="Product.Image" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label class="control-label" asp-for="Product.IsActive"></label> <br />
                            <input type="checkbox" asp-for="Product.IsActive">
                            <span asp-validation-for="Product.IsActive" class="text-danger"></span>
                        </div>
                        <a asp-action="Index" style="background: #8D99AE" class="primary-btn"><i class="fa fa-angle-left"></i> Back to List</a>
                        <button asp-route-id="@Model.Product.Id" type="submit" class="primary-btn"><i class="fa fa-edit"></i> Update</button>
                        <input hidden asp-for="Product.Id">
                    </form>
                </div>
            </div>
            <div class="col-md-6">
                <img alt="@Model.Product.Name" class="img-responsive" src="@Model.Product.Image" />
            </div>
        </div>
        <!-- /row -->
    </div>
    <!-- /container -->
</div>
<!-- /SECTION -->

@section Scripts
    {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}